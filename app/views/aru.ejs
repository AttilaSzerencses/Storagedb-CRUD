<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Áruk</title>
</head>
<body>
<%- include('header.ejs') %>

<% if (removed){ %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Sikeres törlés!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<div class="row">
    <div class="col-6">
        <h1>Áruk</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addaru" type="button" class="btn btn-primary align-self-center">+ Áru hozzáadás</a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Áru neve</th>
        <th scope="col">Egységár</th>
        <th scope="col">Mennyiség</th>
        <th scope="col" class="text-end">Módosítás/Hozzáadás</th>
    </tr>
    </thead>
    <tbody>
    <%for (const aru of aruk) { %>
        <tr>
            <td><%= aru.id %></td>
            <td><%= aru.nev %></td>
            <td><%= aru.egysegar %></td>
            <td><%= aru.mennyiseg %></td>
            <td class="text-end">
                <a href="/editaru/<%= aru.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
                    Edit</a>
                <a href="/deletearu/<%= aru.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
            </td>
        </tr>
    <% } %>
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>
</html>

