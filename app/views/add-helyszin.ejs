<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Helyszin hozzáadás</title>
</head>
<body>
<%- include('header.ejs') %>

<% if (added){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Minden adat kitöltése kötelező!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<form class="row g-3 needs-validation" method="POST" action="/add-helyszin" novalidate>
    <div class="col-12">
        <h1>Helyszin hozzáadás</h1>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="hatvevo_id"   placeholder="Átvevő_ID" name="hatvevo_id" required>
            <label for="hatvevo_id">Átvevő_ID</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="iranyitoszam" placeholder="Irányítószám" name="iranyitoszam" required>
            <label for="iranyitoszam">Irányítószám</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="telepules" placeholder="Település" name="telepules" required>
            <label for="telepules">Település</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="utca"placeholder="Utca" name="utca" required>
            <label for="utca">Utca</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="hazszam"placeholder="Házszám" name="hazszam" required>
            <label for="hazszam">Házszám</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="egyeb"placeholder="Egyéb" name="egyeb">
            <label for="egyeb">Egyéb</label>
        </div>
    </div>
    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit">Hozzáadás</button>
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>
</html>