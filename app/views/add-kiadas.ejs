<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Kiadás hozzáadás</title>
</head>
<body>
<%- include('header.ejs') %>

<% if (added){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Minden adat kitöltése kötelező!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<form class="row g-3 needs-validation" method="POST" action="/add-kiadas" novalidate>
    <div class="col-12">
        <h1>Áru kiadás hozzáadás</h1>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="termeknev" placeholder="Termék neve" name="termeknev" required>
            <label for="termeknev">Termék neve</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="mennyiseg"placeholder="Mennyiség" name="mennyiseg" required>
            <label for="mennyiseg">Mennyiség</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Dátum" placeholder="Egységár" name="datum" required>
            <label for="datum">Dátum</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="atvevo_id" placeholder="Átvevő_ID" name="atvevo_id" required>
            <label for="atvevo_id">Átvevő_ID</label>
        </div>
    </div>
    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit">Hozzáadás</button>
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>
</html>