<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Átvevő hozzáadás</title>
</head>
<body>
<%- include('header.ejs') %>

<% if (added){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Minden adat kitöltése kötelező!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<form class="row g-3 needs-validation" method="POST" action="/add-atvevo" novalidate>
    <div class="col-12">
        <h1>Átvevő hozzáadás</h1>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="vezeteknev" placeholder="Vezetéknév" name="vezeteknev" required>
            <label for="vezeteknev">Vezetéknév</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="keresztnev" placeholder="Keresztnév" name="keresztnev" required>
            <label for="keresztnev">Keresztnév</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email"placeholder="Email" name="email" required>
            <label for="email">Email</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="telefonszam"placeholder="Telefonszám" name="telefonszam" required>
            <label for="email">Telefonszám</label>
        </div>
    </div>
    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit">Hozzáadás</button>
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>
</html>